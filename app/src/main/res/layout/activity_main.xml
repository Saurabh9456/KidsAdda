<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/mainDrawer"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mainBSBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:padding="15dp"
                    android:src="@drawable/menu" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/linotte_bold"
                    android:gravity="center"
                    android:paddingRight="30dp"
                    android:text="Kids Adda"
                    android:textColor="#424242"
                    android:textSize="22dp" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/mainLinear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/musicMainView"
                                android:layout_margin="2dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">


                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="200dp">

                                        <ImageView
                                            android:scaleType="centerCrop"
                                            android:layout_marginTop="7dp"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginRight="7dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/song2" />

                                        <FrameLayout
                                            android:id="@+id/musicBtn"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right|center"
                                            android:layout_marginRight="22dp">

                                            <LinearLayout
                                                android:layout_width="104dp"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/forward"
                                                android:gravity="center"
                                                android:orientation="horizontal"
                                                android:paddingTop="2dp"
                                                android:paddingBottom="2dp">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="10dp"
                                                    android:fontFamily="@font/linotte_semi_bold"
                                                    android:padding="10dp"
                                                    android:text="Music"
                                                    android:textColor="#ffffff"
                                                    android:textSize="18dp" />

                                                <ImageView
                                                    android:layout_width="20dp"
                                                    android:layout_height="20dp"
                                                    android:layout_marginRight="10dp"
                                                    android:padding="2dp"
                                                    android:src="@drawable/right_arrow_blank" />
                                            </LinearLayout>
                                        </FrameLayout>
                                    </FrameLayout>

                                </LinearLayout>

                                <net.cachapa.expandablelayout.ExpandableLayout
                                    android:id="@+id/hideMusic"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:el_duration="500"
                                    app:el_expanded="false"
                                    app:el_parallax="0.5">

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="70dp">

                                        <LinearLayout
                                            android:layout_marginTop="10dp"
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <FrameLayout
                                                android:id="@+id/prayerBtn"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="left"
                                                android:layout_marginLeft="22dp">

                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:background="@drawable/music1"
                                                    android:gravity="center"
                                                    android:orientation="horizontal"
                                                    android:paddingTop="2dp"
                                                    android:paddingBottom="2dp">

                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginLeft="10dp"
                                                        android:layout_marginRight="10dp"
                                                        android:fontFamily="@font/linotte_semi_bold"
                                                        android:padding="10dp"
                                                        android:text="Prayers"
                                                        android:textColor="#00BBBC"
                                                        android:textSize="16dp" />

                                                   </LinearLayout>
                                            </FrameLayout>

                                            <FrameLayout
                                                android:id="@+id/rhymesBtn"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="left"
                                                android:layout_marginLeft="22dp">

                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:background="@drawable/music1"
                                                    android:gravity="center"
                                                    android:orientation="horizontal"
                                                    android:paddingTop="2dp"
                                                    android:paddingBottom="2dp">

                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginLeft="10dp"
                                                        android:layout_marginRight="10dp"
                                                        android:fontFamily="@font/linotte_semi_bold"
                                                        android:padding="10dp"
                                                        android:text="Rhymes"
                                                        android:textColor="#00BBBC"
                                                        android:textSize="16dp" />

                                                     </LinearLayout>
                                            </FrameLayout>

                                        </LinearLayout>

                                    </LinearLayout>

                                </net.cachapa.expandablelayout.ExpandableLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="120dp"
                        android:background="#f1f1f1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/mathsMainView"
                                android:layout_margin="2dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">


                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="200dp">

                                        <ImageView
                                            android:scaleType="centerCrop"
                                            android:layout_marginTop="7dp"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginRight="7dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/maths" />

                                        <FrameLayout
                                        android:id="@+id/mathsBtn"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left|center"
                                        android:layout_marginLeft="22dp">

                                        <LinearLayout
                                            android:layout_width="104dp"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/forward2"
                                            android:gravity="center"
                                            android:orientation="horizontal"
                                            android:paddingTop="2dp"
                                            android:paddingBottom="2dp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="10dp"
                                                android:fontFamily="@font/linotte_semi_bold"
                                                android:padding="10dp"
                                                android:text="Maths"
                                                android:textColor="#ffffff"
                                                android:textSize="18dp" />

                                            <ImageView
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                android:layout_marginRight="10dp"
                                                android:padding="2dp"
                                                android:src="@drawable/right_arrow_blank" />
                                        </LinearLayout>
                                    </FrameLayout>
                                    </FrameLayout>

                                </LinearLayout>

                                <net.cachapa.expandablelayout.ExpandableLayout
                                    android:id="@+id/hideMaths"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:el_duration="500"
                                    app:el_expanded="false"
                                    app:el_parallax="0.5">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="70dp">

                                        <LinearLayout
                                            android:layout_marginTop="10dp"
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <FrameLayout
                                                android:id="@+id/tableBtn"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="left"
                                                android:layout_marginLeft="22dp">

                                                <LinearLayout
                                                    android:layout_width="104dp"
                                                    android:layout_height="wrap_content"
                                                    android:background="@drawable/math1"
                                                    android:gravity="center"
                                                    android:orientation="horizontal"
                                                    android:paddingTop="2dp"
                                                    android:paddingBottom="2dp">

                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginLeft="10dp"
                                                        android:fontFamily="@font/linotte_semi_bold"
                                                        android:padding="10dp"
                                                        android:layout_marginRight="10dp"
                                                        android:text="Table"
                                                        android:textColor="#407CCD"
                                                        android:textSize="16dp" />

                                                   </LinearLayout>
                                            </FrameLayout>

                                            <FrameLayout
                                                android:id="@+id/funMathsBtn"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="left"
                                                android:layout_marginLeft="22dp">

                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:background="@drawable/math1"
                                                    android:gravity="center"
                                                    android:orientation="horizontal"
                                                    android:paddingTop="2dp"
                                                    android:paddingBottom="2dp">

                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginLeft="10dp"
                                                        android:fontFamily="@font/linotte_semi_bold"
                                                        android:padding="10dp"
                                                        android:text="Fun Maths"
                                                        android:layout_marginRight="10dp"
                                                        android:textColor="#407CCD"
                                                        android:textSize="16dp" />

                                                       </LinearLayout>
                                            </FrameLayout>

                                        </LinearLayout>

                                    </LinearLayout>

                                </net.cachapa.expandablelayout.ExpandableLayout>
                            </LinearLayout>



                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="120dp"
                        android:background="#f1f1f1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/games" />

                                <FrameLayout
                                    android:id="@+id/gamesBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right|center"
                                    android:layout_marginRight="22dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/forward3"
                                        android:gravity="center"
                                        android:orientation="horizontal"
                                        android:paddingTop="2dp"
                                        android:paddingBottom="2dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:fontFamily="@font/linotte_semi_bold"
                                            android:padding="10dp"
                                            android:text="Games"
                                            android:textColor="#ffffff"
                                            android:textSize="18dp" />

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_marginRight="10dp"
                                            android:padding="2dp"
                                            android:src="@drawable/right_arrow_blank" />
                                    </LinearLayout>
                                </FrameLayout>
                            </FrameLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="120dp"
                        android:background="#f1f1f1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/knowledge" />

                                <FrameLayout
                                    android:id="@+id/quizBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center"
                                    android:layout_marginLeft="22dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/forward4"
                                        android:gravity="center"
                                        android:orientation="horizontal"
                                        android:paddingTop="2dp"
                                        android:paddingBottom="2dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:fontFamily="@font/linotte_semi_bold"
                                            android:padding="10dp"
                                            android:text="Quiz"
                                            android:textColor="#ffffff"
                                            android:textSize="18dp" />

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_marginRight="20dp"
                                            android:padding="2dp"
                                            android:src="@drawable/right_arrow_blank" />
                                    </LinearLayout>
                                </FrameLayout>
                            </FrameLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/navDrawer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/md_white_1000"
            android:theme="@style/NavigationView"
            app:headerLayout="@layout/nav_header"
            app:itemBackground="@drawable/nav_bg"
            app:itemIconTint="@drawable/nav_text"
            app:itemTextColor="@drawable/nav_text"
            app:menu="@menu/navigation_menu">

        </android.support.design.widget.NavigationView>
    </android.support.v4.widget.DrawerLayout>


</android.support.design.widget.CoordinatorLayout>